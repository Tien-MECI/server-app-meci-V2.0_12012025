<!DOCTYPE html>
<html>
<head>
    <title>Yêu Cầu Vật Tư</title>
    <meta charset="UTF-8">
    <style>
        @page { size: A4 portrait; margin: 0.5cm; }
        body { font-family: Arial, sans-serif; font-size: 12px; margin: 0; padding: 12px; }
        table { width: 100%; border-collapse: collapse; margin-bottom: 10px; font-size: 12px; }
        th, td { border: 1px solid black; padding: 4px; text-align: center; }
        .center-text { text-align: center; }
        .bold { font-weight: bold; }
        .yellow { background: #FFFF00; }
        .blue-light {background: #ADD8E6;}
        .no-border { border: none; }
        .text-left { text-align: left; }
        .center-text { text-align: center; }
        .bold { font-weight: bold; }
        .page-break { page-break-after: always; }

        .watermark {
            position: fixed;
            top: 35%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: -1;
            opacity: 0.1;
            text-align: center;
        }
        .watermark img { width: 80vw; height: auto; }
        @media print {
            body { margin: 0; padding: 15px; -webkit-print-color-adjust: exact !important; print-color-adjust: exact !important; }
        }
        <% if (!hasDataF) { %> .col-f { display: none; } <% } %>
        <% if (!hasDataI) { %> .col-i { display: none; } <% } %>
        <% if (!hasDataJ) { %> .col-j { display: none; } <% } %>
    </style>
    <% if (autoPrint) { %>
        <script>
            window.onload = function () {
                setTimeout(function () {
                    window.print();
                    setTimeout(function () {
                        if (window.opener) window.close();
                    }, 500);
                }, 1000);
            };
        </script>
    <% } %>
</head>
<body>
    <% if (watermarkBase64) { %>
        <div class="watermark">
            <img src="<%= watermarkBase64 %>" />
        </div>
    <% } %>

    <table style="width: 100%; border-collapse: collapse;">
        <tr>
            <td class="no-border">
                <img src="<%= logoBase64 %>" style="width: 80px; height: 40px;" />
            </td>
            <td class="no-border" style="text-align: right;">
                <strong>CÔNG TY CỔ PHẦN CÔNG NGHIỆP M.E.C.I</strong>
            </td>
        </tr>
        <tr>
            <td colspan="2" style="border: none; padding: 0;">
                <div style="border-top: 3px double black; margin: -1px 0 0 0;"></div>
            </td>
        </tr>
    </table>

    <h1 class="center-text bold" style="font-size: 18px;">YÊU CẦU VẬT TƯ</h1>

    <table style="width: 100%; border-collapse: collapse; font-size: 13px;">
        <tr>
            <td width="15%" class="bold">Mã đơn hàng:</td>
            <td width="35%"><%= d4Value || '' %></td>
            <td width="15%" class="bold">Khách hàng:</td>
            <td width="35%"><%= l4Value || '' %></td>
        </tr>
        <tr>
            <td class="bold">Ghi chú kế toán:</td>
            <td><%= ghichuKT || '' %></td>
            <td class="bold">Ghi chú thực hiện:</td>
            <td><%= h6Values || '' %></td>
        </tr>
        <tr>
            <td class="bold">Ngày yêu cầu xuất VT:</td>
            <td><%= d3 || '' %></td>
            <td class="bold">Ngày yêu thực hiện:</td>
            <td><%= h5Values || '' %></td>
        </tr>
        <tr>
            <td class="bold">Loại yêu cầu:</td>
            <td><%= Loaiycthuchien || '' %></td>
            <td class="bold">Thông tin bổ sung:</td>
            <td colspan="3"><%= d5Values || '' %></td>
        </tr>
    </table>

    <!-- Tách dữ liệu thành hai bảng -->
    <%
        // Tạo mảng cho sản phẩm và vật tư
        let sanPhamRows = [];
        let vatTuRows = [];
        let currentGroup = null;
        
        tableData.forEach(item => {
            const row1 = item.row[1] ? item.row[1].toString().trim() : '';
            const isHeaderRow = ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(row1) || 
                               ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(item.row[2]);
            
            // Nếu là hàng tiêu đề, xác định loại nhóm
            if (isHeaderRow) {
                if (row1 === "Mã SP") {
                    currentGroup = "sanPham";
                } else {
                    currentGroup = "vatTu";
                }
            }
            
            // Thêm vào nhóm tương ứng
            if (currentGroup === "sanPham") {
                sanPhamRows.push(item);
            } else if (currentGroup === "vatTu") {
                vatTuRows.push(item);
            } else {
                // Nếu chưa xác định được nhóm, dựa vào giá trị row[1]
                if (row1 && row1 !== "" && !isHeaderRow) {
                    sanPhamRows.push(item);
                } else {
                    vatTuRows.push(item);
                }
            }
        });
    %>

    <!-- BẢNG SẢN PHẨM YÊU CẦU -->
    <% if (sanPhamRows.length > 0) { %>
        <h2 class="center-text bold">BẢNG SẢN PHẨM YÊU CẦU</h2>
        <table style="font-size: 12px;">
            <tbody>
                <% sanPhamRows.forEach(item => { 
                    const isHeaderRow = ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(item.row[1]) || 
                                      ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(item.row[2]);
                %>
                    <tr class="<%= isHeaderRow ? 'bold center-text blue-light' : '' %>">
                        <td class="<%= isHeaderRow ? 'center-text' : 'text-left' %>"><%= item.row[0] %></td>
                        <td><%= item.row[1] %></td>
                        <td class="<%= isHeaderRow ? 'center-text' : 'text-left' %>"><%= item.row[3] %></td>

                        <% if (hasDataF) { %>
                            <td class="center-text"><%= item.row[4] %></td>
                        <% } %>
                        <td class="center-text"><%= item.row[5] %></td>
                        <td class="center-text"><%= item.row[6] %></td>

                        <% if (hasDataI) { %>
                            <td class="center-text"><%= item.row[7] %></td>
                        <% } %>

                        <% if (hasDataJ) { %>
                            <td class="center-text"><%= item.row[8] %></td>
                        <% } %>

                        <td class="center-text"><%= item.row[9] %></td>
                        <td class="center-text"><%= item.row[10] %></td>
                        <td class="center-text"><%= item.row[11] %></td>
                        <td class="center-text"><%= item.row[12] %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <!-- Thêm khoảng cách giữa hai bảng -->
    <div style="margin-top: 20px;"></div>

    <!-- BẢNG VẬT TƯ CẤU THÀNH -->
    <% if (vatTuRows.length > 0) { %>
        <h2 class="center-text bold">BẢNG VẬT TƯ CẤU THÀNH</h2>
        <table style="font-size: 12px;">
            <tbody>
                <% vatTuRows.forEach(item => { 
                    const isHeaderRow = ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(item.row[1]) || 
                                      ["Mã SP", "Mã vật tư sản xuất", "Mã vật tư xuất kèm"].includes(item.row[2]);
                %>
                    <tr class="<%= isHeaderRow ? 'bold center-text blue-light' : '' %>">
                        <td class="<%= isHeaderRow ? 'center-text' : 'text-left' %>"><%= item.row[0] %></td>
                        <td><%= item.row[2] %></td>
                        <td class="<%= isHeaderRow ? 'center-text' : 'text-left' %>"><%= item.row[3] %></td>
                        <td class="center-text"><%= item.row[9] %></td>
                        <td class="center-text"><%= item.row[10] %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>

    <!-- BẢNG TỔNG HỢP -->
    <h2 class="center-text yellow bold" style="font-size: 14px;">BẢNG TỔNG HỢP VẬT TƯ - SẢN PHẨM CHO ĐƠN HÀNG DÀNH CHO KHO</h2>
    <table style="font-size: 12px;">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã SP</th>
                <th>Mã vật tư</th>
                <th>Mô tả</th>
                <th>Tổng số lượng</th>
                <th>ĐVT</th>
            </tr>
        </thead>
        <tbody>
            <% summaryDataB.forEach(item => { %>
                <tr>
                    <td><%= item.stt %></td>
                    <td><%= item.code %></td>
                    <td></td>
                    <td><%= item.desc %></td>
                    <td><%= item.sum %></td>
                    <td><%= item.DVT %></td>
                </tr>
            <% }) %>
            <% summaryDataC.forEach(item => { %>
                <tr>
                    <td><%= item.stt %></td>
                    <td></td>
                    <td><%= item.code %></td>
                    <td><%= item.desc %></td>
                    <td><%= item.sum %></td>
                    <td><%= item.DVT %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>